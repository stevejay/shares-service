{
  "name": "shares-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "build:start": "node 'dist/server.js'",
    "prebuild": "rimraf ./dist/",
    "build": "tsc -p .",
    "postbuild": "ncp src dist --filter=\"^(?!.*ts).*$\"",
    "test": "jest",
    "test:watch": "jest --verbose --detectOpenHandles",
    "start": "cross-env NODE_ENV=development concurrently \"nodemon --inspect\" \"npm run generate --watch\"",
    "lint": "npm run lint:ts && npm run lint:eslint && npm run lint:prettier && npm run lint:schema",
    "lint:ts": "tsc --noEmit --project ./tsconfig.json",
    "lint:eslint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint:prettier": "prettier --check --ignore-path .gitignore ./src",
    "lint:schema": "graphql-schema-linter \"./src/**/*.graphql\"",
    "generate": "graphql-codegen --config codegen.json",
    "format": "prettier --write --ignore-path .gitignore \"./src/**/*.ts\"",
    "format:generated": "prettier --write ./src/resolvers-types.generated.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejay/shares-service.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevejay/shares-service/issues"
  },
  "homepage": "https://github.com/stevejay/shares-service#readme",
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/schema-ast": "^1.18.3",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.2",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^16.4.10",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "husky": "^7.0.1",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.0.1",
    "@opentelemetry/api": "^1.0.2",
    "@opentelemetry/core": "^0.22.0",
    "@opentelemetry/instrumentation-express": "^0.22.0",
    "@opentelemetry/instrumentation-graphql": "^0.22.0",
    "@opentelemetry/instrumentation-http": "^0.22.0",
    "@opentelemetry/node": "^0.22.0",
    "apollo-server-express": "^3.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "graphql": "^15.5.0",
    "graphql-constraint-directive": "^2.1.1",
    "graphql-scalars": "^1.9.3",
    "graphql-schema-linter": "^2.0.1",
    "http": "0.0.1-security",
    "knex": "^0.95.6",
    "lodash": "^4.17.21",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2"
  }
}
